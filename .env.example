# Database (usa PostgreSQL in produzione)
# Locale: postgresql://user:password@localhost:5432/medical_booking
# Neon: postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
# Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
DATABASE_URL="postgresql://user:password@localhost:5432/medical_booking"

# NextAuth
# Produzione: https://tuo-dominio.vercel.app
NEXTAUTH_URL="http://localhost:3000"
# IMPORTANTE: Genera con: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Google Calendar API
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALENDAR_ID="your-calendar-id@group.calendar.google.com"

# Payment Link (inserito dall'admin)
PAYMENT_LINK_URL="https://your-payment-provider.com/pay"

# Admin credentials (first setup)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-me-on-first-login"

# Stripe
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Fatture in Cloud
FATTUREINCLOUD_ACCESS_TOKEN="your-fic-access-token"
FATTUREINCLOUD_COMPANY_ID="1234567"  # ID della tua azienda su Fatture in Cloud
FATTUREINCLOUD_PAYMENT_ACCOUNT_ID="1"  # ID del conto di pagamento (1=Conto Corrente)
# IMPORTANTE: ID dell'aliquota IVA esente per prestazioni sanitarie (es. "Escluso Art.10")
# Per trovarlo: Fatture in Cloud > Impostazioni > Aliquote IVA > cerca "Escluso Art.10" o simile
# Senza questo ID configurato correttamente, le fatture appariranno come â‚¬0,00 nell'elenco!
FATTUREINCLOUD_EXEMPT_VAT_ID="123"  # Sostituisci con l'ID della tua aliquota "Escluso Art.10"

# Gmail for Nodemailer
GMAIL_USER="your-gmail-address@gmail.com"
GMAIL_APP_PASSWORD="your-google-app-password"
